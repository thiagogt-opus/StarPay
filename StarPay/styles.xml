    </style>

    <style name="Starpay.Card.Resultado.DataItemGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/starpay_card_espacamento_interno</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Starpay.Card.Resultado.Icone">
        <item name="android:layout_width">@dimen/starpay_image_icon_size_huge</item>
        <item name="android:layout_height">@dimen/starpay_image_icon_size_huge</item>
        <item name="android:layout_marginLeft">@dimen/starpay_card_resultado_margin_left</item>
        <item name="android:layout_marginTop">@dimen/starpay_card_espacamento_interno_grande</item>
        <item name="android:layout_marginBottom">@dimen/starpay_card_espacamento_interno_grande</item>
    </style>

    <style name="Starpay.Card.Resultado.Botao">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/starpay_card_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Starpay.Card.Resultado.Botao.Sucesso">
        <item name="android:textColor">@drawable/starpay_button_text_success</item>
    </style>
    <style name="Starpay.Card.Resultado.Botao.Erro">
        <item name="android:textColor">@drawable/starpay_button_text_error</item>
    </style>

    <!-- -->

    <style name="Starpay.CardVelho">
        <item name="android:layout_marginLeft">@dimen/starpay_side_margin</item>
        <item name="android:layout_marginRight">@dimen/starpay_side_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Starpay.CardVelho.Historico">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="Starpay.Login">
    </style>
    <style name="Starpay.Login.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/starpay_font_secondary</item>
